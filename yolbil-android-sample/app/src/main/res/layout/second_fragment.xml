<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.MainFragment">

    <com.basarsoft.yolbil.ui.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <Switch
            android:id="@+id/offlineSwitch"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="Offline"
            android:textColor="@android:color/black"
            tools:checked="false" />

        <Switch
            android:id="@+id/voiceSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="@string/voice_guidance_switch_label"
            android:textColor="@android:color/black"
            tools:checked="true" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:visibility="gone"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/textExaggeration"
                android:layout_width="40dp"
                android:visibility="gone"
                android:layout_height="match_parent"></TextView>

            <androidx.appcompat.widget.AppCompatSeekBar
                android:id="@+id/exagerationSeekBar"
                android:layout_width="fill_parent"
                android:visibility="gone"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:max="100" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:visibility="gone"

            android:orientation="horizontal">


            <TextView
                android:id="@+id/textIlluminationDirection"
                android:layout_width="40dp"
                android:visibility="gone"

                android:layout_height="match_parent"></TextView>

            <androidx.appcompat.widget.AppCompatSeekBar
                android:id="@+id/illuminationDirectionSeekBar"
                android:layout_width="fill_parent"
                android:visibility="gone"

                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:max="360" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:visibility="gone"

            android:orientation="horizontal">


            <TextView
                android:id="@+id/textOpacity"
                android:layout_width="40dp"
                android:visibility="gone"

                android:layout_height="match_parent"></TextView>

            <androidx.appcompat.widget.AppCompatSeekBar
                android:id="@+id/opacitySeekBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"

                android:layout_weight="1"
                android:max="100" />
        </LinearLayout>

        <CheckBox
            android:id="@+id/yolKatmani"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:visibility="gone"

            android:text="Yol KatmanÄ±"
            android:textSize="30sp"></CheckBox>
        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="focus orientation" />

        <Button
            android:id="@+id/button3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Start Navigation"
            tools:layout_editor_absoluteX="160dp"
            tools:layout_editor_absoluteY="77dp" />

        <Button
            android:id="@+id/buttonSimulation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:text="@string/simulation_start" />
    </LinearLayout>

    <TextView
        android:id="@+id/zoomText"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:shadowColor="#BFFFFFFF"
        android:shadowDx="0"
        android:visibility="gone"

        android:shadowDy="0"
        android:shadowRadius="4"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"></TextView>
    <Button
        android:id="@+id/modeButton"
        android:text="mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"></Button>

    <androidx.cardview.widget.CardView
        android:id="@+id/navigationInfoCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="#88000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/navigationInfoText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:text="Navigasyon bilgisi"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/followButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="96dp"
        android:text="@string/follow_button_text"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/navigationInfoCard"
        app:layout_constraintEnd_toEndOf="@id/navigationInfoCard" />

    <FrameLayout
        android:id="@+id/routeLoadingOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#AA000000"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:gravity="center"
            android:layout_gravity="center">

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Large" />

            <TextView
                android:id="@+id/routeLoadingText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/route_loading_text"
                android:textColor="@android:color/white"
                android:textSize="18sp" />
        </LinearLayout>

    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
