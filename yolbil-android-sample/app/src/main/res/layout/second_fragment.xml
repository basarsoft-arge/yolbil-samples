<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.MainFragment">

    <com.basarsoft.yolbil.ui.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <Switch
            android:id="@+id/offlineSwitch"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="Offline"
            android:textColor="@android:color/black"
            tools:checked="false" />

        <Switch
            android:id="@+id/voiceSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="@string/voice_guidance_switch_label"
            android:textColor="@android:color/black"
            tools:checked="true" />

        <Switch
            android:id="@+id/mockGpsSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="Mock GPS"
            android:textColor="@android:color/black" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:visibility="gone"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/textExaggeration"
                android:layout_width="40dp"
                android:visibility="gone"
                android:layout_height="match_parent"></TextView>

            <androidx.appcompat.widget.AppCompatSeekBar
                android:id="@+id/exagerationSeekBar"
                android:layout_width="fill_parent"
                android:visibility="gone"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:max="100" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:visibility="gone"

            android:orientation="horizontal">


            <TextView
                android:id="@+id/textIlluminationDirection"
                android:layout_width="40dp"
                android:visibility="gone"

                android:layout_height="match_parent"></TextView>

            <androidx.appcompat.widget.AppCompatSeekBar
                android:id="@+id/illuminationDirectionSeekBar"
                android:layout_width="fill_parent"
                android:visibility="gone"

                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:max="360" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:visibility="gone"

            android:orientation="horizontal">


            <TextView
                android:id="@+id/textOpacity"
                android:layout_width="40dp"
                android:visibility="gone"

                android:layout_height="match_parent"></TextView>

            <androidx.appcompat.widget.AppCompatSeekBar
                android:id="@+id/opacitySeekBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"

                android:layout_weight="1"
                android:max="100" />
        </LinearLayout>

        <CheckBox
            android:id="@+id/yolKatmani"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:visibility="gone"

            android:text="Yol Katmanı"
            android:textSize="30sp"></CheckBox>
        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="focus orientation" />

        <Button
            android:id="@+id/blueDotButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/blue_dot_focus_button_text" />

        <Button
            android:id="@+id/button3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Start Navigation"
            tools:layout_editor_absoluteX="160dp"
            tools:layout_editor_absoluteY="77dp" />

        <Button
            android:id="@+id/buttonSimulation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:text="@string/simulation_start" />

        <LinearLayout
            android:id="@+id/baseLayerButtonContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonGoogleBase"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:text="@string/basemap_google" />

            <Button
                android:id="@+id/buttonBasarsoftBase"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/basemap_basarsoft" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/zoomText"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:shadowColor="#BFFFFFFF"
        android:shadowDx="0"
        android:visibility="gone"

        android:shadowDy="0"
        android:shadowRadius="4"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"></TextView>
    <Button
        android:id="@+id/modeButton"
        android:text="mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"></Button>

     <LinearLayout
        android:id="@+id/navigationSpeedRow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="@drawable/bg_speed_info_safe"
        android:padding="12dp"
        app:layout_constraintBottom_toTopOf="@id/navigationInfoCard"
        app:layout_constraintEnd_toEndOf="@id/navigationInfoCard"
        app:layout_constraintStart_toStartOf="@id/navigationInfoCard">

        <ImageView
            android:id="@+id/navigationSpeedIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_car"
            android:tint="@color/speed_safe_text"
            android:contentDescription="@string/navigation_speed_icon_description" />

        <TextView
            android:id="@+id/navigationCurrentSpeedText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="@string/navigation_current_speed_placeholder"
            android:textColor="@color/speed_safe_text"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/navigationSpeedLimitText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="@string/navigation_speed_limit_placeholder"
            android:textColor="@color/speed_safe_text"
            android:textSize="15sp" />
    </LinearLayout>

    <!-- Manifest ve yönlendirme bilgilerini gösteren ana NavigationInfoCard -->
    <androidx.cardview.widget.CardView
        android:id="@+id/navigationInfoCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:cardBackgroundColor="@color/navigation_card_background"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

            <LinearLayout
                android:id="@+id/navigationSummaryRow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <TextView
                    android:id="@+id/navigationTotalDistanceText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/navigation_total_distance_placeholder"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/navigationTotalTimeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/navigation_total_time_placeholder"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/navigationIconContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingEnd="12dp">

                    <ImageView
                        android:id="@+id/navigationDirectionIcon"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:contentDescription="@string/navigation_direction_icon_description"
                        android:scaleType="fitCenter"
                        android:tint="@android:color/white"
                        android:src="@drawable/go_straight" />

                    <TextView
                        android:id="@+id/navigationDistanceText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="-"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/navigationManifestText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/navigation_card_default_manifest"
                        android:textColor="@android:color/white"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/navigationDirectionText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="@string/keep_going_straight"
                        android:textColor="@android:color/white"
                        android:textSize="18sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/nextCommandContainer"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/bg_next_command"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/nextCommandLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/next_direction_label"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/nextCommandIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="8dp"
                    android:contentDescription="@string/navigation_next_direction_icon_description"
                    android:src="@drawable/ic_right"
                    android:tint="@android:color/white" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/followButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:text="@string/follow_button_text"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/navigationSpeedRow"
        app:layout_constraintEnd_toEndOf="@id/navigationSpeedRow" />

    <FrameLayout
        android:id="@+id/routeLoadingOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#AA000000"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:gravity="center"
            android:layout_gravity="center">

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Large" />

            <TextView
                android:id="@+id/routeLoadingText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/route_loading_text"
                android:textColor="@android:color/white"
                android:textSize="18sp" />
        </LinearLayout>

    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
